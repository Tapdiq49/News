@model CategoryViewModel
@{
    ViewData["Title"] = "Yeni kategoriya";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Yeni kategoriya</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label>Vəziyyəti</label>
                    <div class="custom-control custom-radio custom-control-inline ml-3">
                        <input type="radio" asp-for="SoftDeleted" value="true" class="custom-control-input">
                        <label class="custom-control-label" asp-for="SoftDeleted" for="statusActive">Passiv</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" asp-for="SoftDeleted" value="false" class="custom-control-input">
                        <label class="custom-control-label" asp-for="SoftDeleted">Aktiv</label>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Name">Ad</label>
                    <input class="form-control form-control-user slug-source" asp-for="Name">
                    <span class="field-validation-valid text-danger" asp-validation-for="Name" ></span>
                </div>

                <div class="form-group d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Əlavə et</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

