@model ContactViewModel
@{
    ViewData["Title"] = "Əlaqəni yenilə";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Əlaqəni yenilə</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post">
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <label asp-for="Phone">Ad</label>
                    <input class="form-control form-control-user slug-source" asp-for="Phone">
                    <span class="field-validation-valid" asp-validation-for="Phone"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Ad</label>
                    <input class="form-control form-control-user slug-source" asp-for="Address">
                    <span class="field-validation-valid" asp-validation-for="Address"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Ad</label>
                    <input class="form-control form-control-user slug-source" asp-for="Email">
                    <span class="field-validation-valid" asp-validation-for="Email"></span>
                </div>
                <div class="form-group d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-pencil-alt"></i>
                        </span>
                        <span class="text">Yenilə</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->


@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}