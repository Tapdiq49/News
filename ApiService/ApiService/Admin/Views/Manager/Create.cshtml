@model AdminViewModel
@{
    ViewData["Title"] = "Yeni idarəçi";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Yeni idarəçi</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Fullname">Ad və Soyadı</label>
                    <input class="form-control form-control-user slug-source" asp-for="Fullname">
                    <span class="field-validation-valid text-danger" asp-validation-for="Fullname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Emaili</label>
                    <input class="form-control form-control-user slug-source" asp-for="Email">
                    <span class="field-validation-valid text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Şifrəsi</label>
                    <input type="password" class="form-control form-control-user slug-source" asp-for="Password">
                    <span class="field-validation-valid text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Type">Rolu</label>
                    <select class="form-control form-control-user" asp-for="Type">
                        <option selected disabled>Seçin</option>
                        <option value="0">Super Admin</option>
                        <option value="1">Redaktor</option>
                    </select>
                    <span class="field-validation-valid text-danger" asp-validation-for="Type"></span>
                </div>

                <div class="form-group d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Əlavə et</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



