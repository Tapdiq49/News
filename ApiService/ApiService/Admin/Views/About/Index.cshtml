@model AboutViewModel
@{
    ViewData["Title"] = "Haqqımızda";
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Haqqımızda</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Başlıq</th>
                            <th>Mətn</th>
                            <th style="width: 110px;">Redaktə et</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Title</td>
                            <td>@Html.Raw(Model.Text)</td>
                            <td class="text-center">
                                <a class="btn btn-info btn-circle btn-sm" asp-action="edit" asp-route-id="@Model.Id">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
