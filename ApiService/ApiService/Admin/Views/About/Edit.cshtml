@model AboutViewModel
@{
    ViewData["Title"] = "Haqqımızdanı yenilə";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Yenilə</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post">
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <label asp-for="Title">Ad</label>
                    <input class="form-control form-control-user slug-source" asp-for="Title">
                    <span class="field-validation-valid" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Text">Ad</label>
                    <textarea class="form-control form-control-user slug-source" asp-for="Text"></textarea>
                    <span class="field-validation-valid" asp-validation-for="Text"></span>
                </div>
                <div class="form-group d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-pencil-alt"></i>
                        </span>
                        <span class="text">Yenilə</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->


@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('Text');
        });
    </script>
}

@section Head{
    <script src="//cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
}

